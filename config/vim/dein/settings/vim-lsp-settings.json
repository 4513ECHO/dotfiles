{
  "bash-language-server": {
    "disabled": true
  },
  "efm-langserver": {
    "allowlist": [
      "markdown",
      "sh",
      "json"
    ],
    "disabled": false
  },
  "json-languageserver": {
    "workspace_config": {
      "json": {
        "format": {
          "enable": true
        },
        "schemas": [
          {
            "fileMatch": [
              "deno.json",
              "deno.jsonc"
            ],
            "url": "https://deno.land/x/deno/cli/schemas/config-file.v1.json"
          }
        ]
      }
    }
  },
  "pyls-all": {
    "workspace_config": {
      "pyls": {
        "configurationSources": [
          "flake8"
        ],
        "plugins": {
          "jedi_definition": {
            "follow_builtin_imports": true,
            "follow_imports": true
          },
          "mccabe": {
            "enabled": false
          },
          "pycodestyle": {
            "enabled": false
          },
          "pyflakes": {
            "enabled": false
          },
          "pyls_black": {
            "enabled": true
          },
          "pyls_isort": {
            "enabled": true
          },
          "pyls_mypy": {
            "enabled": true
          }
        }
      }
    }
  },
  "taplo-lsp": {
    "disabled": true
  },
  "vim-language-server": {
    "disabled": true
  },
  "yaml-language-server": {
    "workspace_config": {
      "yaml": {
        "completion": true,
        "hover": true,
        "schemas": {
          "https://mattn.github.io/efm-langserver/schema.json": "/efm-langserver/config.yaml"
        },
        "validate": true
      }
    }
  }
}
