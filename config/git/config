[user]
  name = 4513ECHO
  email = 4513echo@gmail.com

[include]
  path = ~/.gitconfig.local

[core]
  editor = vim
  quotepath = false
  commentChar = ";"
  # pager = vim -

[pager]
  diff = diff-highlight | less -R +Gg
  log = diff-highlight | less -R +Gg
  show = diff-highlight | less -R +Gg

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto

[init]
  defaultBranch = main

[push]
  default = simple

[pull]
  rebase = false

[status]
  showUntrackedFiles = all

[commit]
  template = ~/.config/git/commit_template
  verbose = true

[url "git@github.com:"]
  insteadOf = github:
  insteadOf = https://github.com/

[diff]
  tool = vimdiff
  algorithm = histogram
  colorMoved = dimmed-zebra

[difftool]
  prompt = false

[alias]
  alias = !git config --get-regexp '^alias' | sed 's:alias\\.\\([^ ]*\\) \\(.*\\):\\1\\\t -> \\2:' | cut -c 1-46 | sort
  st = status
  graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  gr = !git graph
  cm = commit
  cmm = commit -m
  co = checkout
  br = branch
  df = diff
  ps = push
  pl = pull
  pwd = !pwd
  root = rev-parse --show-toplevel
  # cl = clone
  cl = !ghq get
  latest = describe --tags --abbrev=0
  adp = add -p
  adu = add -u
  dft = difftool
  dirs = !git ls-files | sed -e '/^[^\\/]*$/d' -e 's:/[^/]*$::' | uniq
  set-remote = !"f(){ git remote add origin $1; git pull --set-upstream origin ${2:-main}; }; f"
  all-files = !git ls-files
  history = reflog
  unrebase = !git reset --hard "$(git reflog --color | fzf --ansi --preview 'git show {1}' | awk '{print $2}')"
  untrack = rm --cached
  unstage = restore --staged
  uncommit = reset --soft HEAD^
  hash = rev-parse --short HEAD

[ghq]
  root = ~/.cache/vim/dein/repos
  root = ~/Develops

